{
  "name": "platform",
  "version": "1.0.0",
  "private": true,
  "description": "Enterprise AI Assistant Platform - Multi-modal AI interaction system",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:all": "turbo run dev --parallel",
    "dev:landing": "pnpm --filter @platform/landing dev",
    "dev:dashboard": "pnpm --filter @platform/dashboard dev",
    "dev:meeting": "pnpm --filter @platform/meeting dev",
    "dev:widget": "pnpm --filter @platform/widget-sdk dev",
    "dev:api": "pnpm --filter @platform/api dev",
    "dev:realtime": "pnpm --filter @platform/realtime dev",
    "dev:ifinallyWill": "pnpm --filter @platform/ifinallyWill dev",
    "dev:llm": "pnpm --filter @platform/llm-gateway dev",
    "chatwoot:up": "cd apps/chatwoot && docker compose -f docker-compose.platform.yml up -d",
    "chatwoot:down": "cd apps/chatwoot && docker compose -f docker-compose.platform.yml down",
    "chatwoot:logs": "cd apps/chatwoot && docker compose -f docker-compose.platform.yml logs -f",
    "chatwoot:shell": "cd apps/chatwoot && docker compose -f docker-compose.platform.yml exec chatwoot bash",
    "chatwoot:console": "cd apps/chatwoot && docker compose -f docker-compose.platform.yml exec chatwoot bundle exec rails console",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:load": "cd tests/load && pnpm test:all",
    "test:load:api": "cd tests/load && pnpm test:api",
    "test:load:websocket": "cd tests/load && pnpm test:websocket",
    "test:load:mixed": "cd tests/load && pnpm test:mixed",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:up": "docker compose -f infrastructure/docker/docker-compose.yml up -d",
    "db:down": "docker compose -f infrastructure/docker/docker-compose.yml down",
    "db:push": "pnpm --filter @platform/db db:push",
    "db:seed": "pnpm --filter @platform/db db:seed"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@playwright/test": "1.56.1",
    "concurrently": "9.2.1",
    "esbuild": "0.25.0",
    "playwright": "1.56.1",
    "turbo": "2.3.3",
    "typescript": "5.7.2"
  },
  "packageManager": "pnpm@9.15.0",
  "pnpm": {
    "overrides": {
      "next": "15.5.7",
      "jws": "4.0.1"
    }
  },
  "dependencies": {
    "@tailwindcss/vite": "4.1.14",
    "tailwindcss": "4.1.14"
  }
}
