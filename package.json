{
  "name": "platform",
  "version": "1.0.0",
  "private": true,
  "description": "Enterprise AI Assistant Platform - Multi-modal AI interaction system",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "start": "concurrently -n db,api,app -c blue,green,magenta \"pnpm db:up\" \"pnpm dev:api\" \"pnpm dev:app\"",
    "dev": "concurrently -n api,app -c green,magenta \"pnpm dev:api\" \"pnpm dev:app\"",
    "dev:app": "pnpm --filter @platform/ifinallyWill dev",
    "dev:api": "pnpm --filter @platform/api dev",
    "dev:dashboard": "pnpm --filter @platform/dashboard dev",
    "dev:all": "turbo run dev --parallel",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:up": "docker compose -f infrastructure/docker/docker-compose.yml up -d",
    "db:down": "docker compose -f infrastructure/docker/docker-compose.yml down",
    "db:push": "pnpm --filter @platform/db db:push",
    "db:seed": "pnpm --filter @platform/db db:seed",
    "db:setup": "pnpm db:up && sleep 3 && pnpm db:push"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@playwright/test": "1.56.1",
    "concurrently": "9.2.1",
    "esbuild": "0.25.0",
    "playwright": "1.56.1",
    "turbo": "2.3.3",
    "typescript": "5.7.2"
  },
  "packageManager": "pnpm@9.15.0",
  "pnpm": {
    "overrides": {
      "next": "15.5.7",
      "jws": "4.0.1"
    }
  },
  "dependencies": {
    "@tailwindcss/vite": "4.1.14",
    "tailwindcss": "4.1.14"
  }
}
