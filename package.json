{
  "name": "platform",
  "version": "1.0.0",
  "private": true,
  "description": "Enterprise AI Assistant Platform - Multi-modal AI interaction system",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "concurrently --names \"TURBO,AGENT\" --prefix-colors \"cyan,magenta\" \"turbo run dev --parallel\" \"pnpm dev:agent\"",
    "dev:all": "turbo run dev --parallel",
    "dev:landing": "pnpm --filter @platform/landing dev",
    "dev:dashboard": "pnpm --filter @platform/dashboard dev",
    "dev:meeting": "pnpm --filter @platform/meeting dev",
    "dev:widget": "pnpm --filter @platform/widget-sdk dev",
    "dev:api": "pnpm --filter @platform/api dev",
    "dev:realtime": "pnpm --filter @platform/realtime dev",
    "dev:agent": "cd livekit-agent && (test -d venv && . venv/bin/activate && python agent.py dev || echo '⚠️  Python venv not found. Run: cd livekit-agent && python3 -m venv venv && . venv/bin/activate && pip install -r requirements.txt')",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:up": "docker compose -f infrastructure/docker/docker-compose.yml up -d",
    "db:down": "docker compose -f infrastructure/docker/docker-compose.yml down",
    "db:push": "pnpm --filter @platform/db db:push",
    "db:seed": "pnpm --filter @platform/db db:seed"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "concurrently": "^9.2.1",
    "turbo": "2.3.3",
    "typescript": "5.7.2"
  },
  "packageManager": "pnpm@9.15.0",
  "dependencies": {
    "@tailwindcss/vite": "4.1.14",
    "tailwindcss": "4.1.14"
  }
}
