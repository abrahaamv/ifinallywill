{
  "name": "@platform/db",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "biome check --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "dotenv -e ../../.env.local -- tsx src/seed.ts",
    "clean": "rm -rf dist node_modules .turbo coverage"
  },
  "dependencies": {
    "@node-rs/argon2": "2.0.2",
    "@platform/shared": "workspace:*",
    "dotenv": "16.4.7",
    "drizzle-orm": "0.44.6",
    "postgres": "3.4.6"
  },
  "devDependencies": {
    "@types/node": "22.10.5",
    "@vitest/coverage-v8": "2.1.8",
    "dotenv-cli": "7.4.2",
    "drizzle-kit": "0.31.5",
    "tsx": "4.19.2",
    "typescript": "5.7.2",
    "vitest": "2.1.8"
  }
}
